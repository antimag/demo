<h1 align="center">Listing Clients</h1>
 
<table align="center" bgcolor="pink" cellpadding="2" cellspacing="3">
  <tr>
    <td colspan="2"><%= link_to 'New Client', new_client_path %></td>
  </tr>
  <tr>
    <th>Name</th>
    <th>Surname</th>
     <th>Contact</th>
    <th>Email</th>
     <th>Address</th>
  </tr>
 
  <% @clients.each do |client| %>
    <tr>
      <% debugger %>
      <td><%= client.name %></td>
      <td><%= client.surname %></td>
      <td><%= client.contact %></td>
      <td><%= client.email %></td>
      <td><%= client.address %></td>
      <td><%= link_to 'Show', client_path(client) %></td>
      <td><%= link_to 'Edit', edit_client_path(client) %></td>
      <td><%= link_to 'Destroy', client_path(client),method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>